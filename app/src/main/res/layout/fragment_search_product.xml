<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.searchproduct.SearchProductFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                >
                <ImageView
                    android:id="@+id/search_imgBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/back_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp"
                    android:layout_margin="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <EditText
                            android:id="@+id/search_edSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFF"
                            android:hint="Tìm kiếm sản phẩm"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:lines="1"
                            android:singleLine="true"
                            android:layout_toStartOf="@id/search_imgClear"
                            />
                        <ImageView
                            android:id="@+id/search_imgClear"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baseline_cancel_24"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_rcView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_child_product"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:scrollbars="none"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>