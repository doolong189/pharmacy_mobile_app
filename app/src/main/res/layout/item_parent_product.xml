<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/item_parent_tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_n_ph_m_khuy_n_m_i"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            />
        <ImageView
            android:id="@+id/item_parent_imgMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_home"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_parent_lnEmptyProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_empty_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validate_product_empty"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_parent_rcChildProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_child_product"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:scrollbars="none"
        android:isScrollContainer="false"
        app:spanCount="2"
        tools:itemCount="4"
        />
</LinearLayout>